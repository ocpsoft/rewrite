            <repository>
               <id>arquillian-snapshots</id>
               <url>https://repository-arquillian.forge.cloudbees.com/snapshot/</url>
               <releases>
                  <enabled>false</enabled>
               </releases>
               <snapshots>
                  <enabled>true</enabled>
               </snapshots>
            </repository>
         </repositories>
