<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>

	<files>
		<file>
			<source>../LICENSE</source>
		</file>
		<file>
			<source>../NOTICE</source>
		</file>
	</files>

	<dependencySets>

		<!-- servlet module -->
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>org.ocpsoft.rewrite:rewrite-servlet:jar</include>
			</includes>
		</dependencySet>

		<!-- config modules -->
		<dependencySet>
			<outputDirectory>/config</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>org.ocpsoft.rewrite:rewrite-config-*:jar</include>
			</includes>
		</dependencySet>

		<!-- integration modules -->
		<dependencySet>
			<outputDirectory>/integration</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>org.ocpsoft.rewrite:rewrite-integration-*:jar</include>
			</includes>
		</dependencySet>

	</dependencySets>

</assembly>